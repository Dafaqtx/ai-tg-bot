{
  "name": "ai-tg-bot",
  "version": "1.0.0",
  "description": "Modular Telegram bot with Gemini AI integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:watch": "ts-node-dev --respawn --transpile-only --watch src src/index.ts",
    "clean": "rm -rf dist",
    "build:clean": "npm run clean && npm run build",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "eslint --ext .ts src/ --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "telegram",
    "bot",
    "telegraf",
    "gemini",
    "ai",
    "typescript",
    "modular"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/genai": "^1.8.0",
    "dotenv": "^16.3.1",
    "telegraf": "^4.15.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
